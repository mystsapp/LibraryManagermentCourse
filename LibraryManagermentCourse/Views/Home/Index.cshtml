@model LibraryManagermentCourse.ViewModels.HomeViewModel

@{ 
    var availableBooks = Model.BookCount - Model.LendBookCount;
}

<h1>Library management dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">
                Customers Count
            </div>
            <div class="card-body text-primary">
                There are @Model.CustomerCount Customers
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">
                Authors Count
            </div>
            <div class="card-body text-primary">
                There are @Model.AuthorCount Authors
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">
                Books Count
            </div>
            <div class="card-body text-primary">
                There are @availableBooks books available out of @Model.BookCount books
            </div>
        </div>
    </div>
</div>