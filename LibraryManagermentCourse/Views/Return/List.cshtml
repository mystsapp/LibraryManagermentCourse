@model IEnumerable<LibraryManagermentCourse.Data.Model.Book>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Authors name</th>
            <th>Borrower name</th>
            <th>Return</th>
        </tr>
    </thead>
    <tbody>
@foreach (var book in Model) {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author.Name</td>
            <td>@book.Borrower.Name</td>
            <td>
            <td><a class="btn btn-success" asp-controller="Return" asp-action="ReturnABook" asp-route-bookId="@book.BookId">Return</a></td>
            @*<td><a class="btn btn-success" asp-controller="Return" asp-action="ReturnABook" asp-route-bookId="@book.BookId">Return</a></td>*@
        </tr>
}
    </tbody>
</table>
